    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseAuthentcation"
        tools:targetApi="31">
        <activity
            android:name=".activities.faculty.AllStudentsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.faculty.FacultyDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.student.VideoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.student.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.student.StudentDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.faculty.FacultyActivity"
            android:exported="false" />
        <activity
            android:name=".activities.student.StudentActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SignupActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>